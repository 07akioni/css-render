{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": [ "./*" ]
    },
    "plugins": [
      {
        "transform":"typescript-transform-paths"
      }
    ],
    "outDir": "./dist",
    "strict": true,
    "target": "ESNext"
  },
  "include": [
    "src/**/*",
    "playground/**/*",
    "test/**/*"
  ]
}