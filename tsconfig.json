{
  "compilerOptions": {
    "baseUrl": "./packages",
    "sourceMap": false,
    "moduleResolution": "node",
    "allowJs": false,
    "module": "ESNext",
    "declaration": true,
    "outDir": "./dist",
    "paths": {
      "@css-render/*": [
        "./*"
      ],
      "css-render": [
        "./core/index"
      ]
    },
    "lib": [
      "ESNext",
      "DOM"
    ],
    "strict": true,
    "target": "ES6"
  },
  "include": [
    "packages/**/*",
    "playground/**/*",
    "test/**/*"
  ]
}